{
  "name": "github-proxy",
  "version": "0.0.1",
  "description": "GitHub proxy on Cloudflare Workers.",
  "main": "dist/index.js",
  "repository": "htttps://github.com/mchaNetwork/github-proxy",
  "author": "mochaaP <npm@mochaa.ws>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@cloudflare/wrangler": "^1.19.5",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@tsconfig/recommended": "^1.0.1",
    "esbuild": "^0.13.14",
    "eslint": "^8.2.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-unicorn": "^38.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.3",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.2",
    "typescript": "^4.5.2"
  },
  "eslintConfig": {
    "extends": [
      "standard-with-typescript",
      "plugin:unicorn/recommended"
    ],
    "plugins": [
      "eslint-plugin-tsdoc"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "tsdoc/syntax": "warn"
    },
    "ignorePatterns": [
      "dist/**/*.js"
    ]
  },
  "scripts": {
    "build": "rimraf dist && esbuild --bundle src/index.ts --minify --sourcemap --outfile=dist/index.js",
    "lint": "eslint ./src --fix",
    "pretty": "prettier src/**/* --write",
    "prerelease": "yarn test && yarn build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags",
    "pretest": "yarn lint"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0"
  }
}
